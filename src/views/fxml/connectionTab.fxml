<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.geometry.Insets?>
<GridPane vgap="10" hgap="10" alignment="CENTER" scaleShape="true" gridLinesVisible="false" xmlns:fx="http://javafx.com/fxml">
    <padding>
        <Insets top="10" left="10" right="10" bottom="10" />
    </padding>
    <TextArea editable="false" promptText="Connection log" maxWidth="Infinity" fx:id="connectionLogTextArea"
              GridPane.rowIndex="1" GridPane.hgrow="ALWAYS" />
    <Button text="Close Connection" maxWidth="Infinity" onAction="#closeConnectionEvent"
            GridPane.rowIndex="2" GridPane.hgrow="ALWAYS" />
</GridPane>